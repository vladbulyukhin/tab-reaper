{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "types": ["web-ext-types", "chrome", "node"],
    "lib": ["es2020", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}