{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/entrypoints/popup/*"]
    },
    "target": "es2020",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "types": ["vitest/globals", "chrome", "node"],
    "lib": ["es2020", "dom"]
  },
  "include": ["src", "tests", "./.wxt/wxt.d.ts", "./src/global.d.ts"],
  "exclude": [
    "node_modules",
    "playwright.config.ts",
    "wxt.config.ts",
    "landing",
    "tests"
  ]
}
