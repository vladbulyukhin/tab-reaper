{
  "manifest_version": 3,
  "name": "Tab Reaper: Unused Tab Collector",
  "description": "Automatically closes tabs that haven't been used for a while.",
  "version": "0.0.1",
  "permissions": ["tabs", "storage"],
  "icons": {
    "16": "./icons/reaper_16.png",
    "32": "./icons/reaper_32.png",
    "64": "./icons/reaper_64.png",
    "128": "./icons/reaper_128.png"
  },
  "action": {
    "default_title": "Tab Reaper"
  },
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": false
  }
}
